# =============================================================================
# DATA SOURCES
# =============================================================================

# News and Sentiment APIs
NEWS_API_KEY=your_newsapi_key_here
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
FINNHUB_API_KEY=your_finnhub_key_here

# Social Media Sentiment
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here

# Market Data
POLYGON_API_KEY=your_polygon_api_key_here
QUANDL_API_KEY=your_quandl_api_key_here
COINGECKO_API_KEY=your_coingecko_api_key_here

# =============================================================================
# MACHINE LEARNING & AI
# =============================================================================

# OpenAI API (for LLM features)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2048

# Anthropic Claude API (alternative LLM)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# RISK MANAGEMENT CONFIGURATION
# =============================================================================

# Portfolio Risk Limits
MAX_PORTFOLIO_RISK=0.02
MAX_POSITION_SIZE=0.10
MAX_LEVERAGE=3.0
STOP_LOSS_THRESHOLD=0.05
TAKE_PROFIT_THRESHOLD=0.15

# Risk Model Parameters
VAR_CONFIDENCE_LEVEL=0.95
CVAR_CONFIDENCE_LEVEL=0.95
STRESS_TEST_SCENARIOS=10
MONTE_CARLO_SIMULATIONS=10000

# Drawdown Controls
MAX_DAILY_DRAWDOWN=0.03
MAX_MONTHLY_DRAWDOWN=0.10
RECOVERY_THRESHOLD=0.02

# =============================================================================
# AGENT FRAMEWORK CONFIGURATION
# =============================================================================

# Multi-Agent System
AGENT_UPDATE_INTERVAL_SECONDS=60
AGENT_COORDINATION_TIMEOUT=30
SHARED_MEMORY_SIZE_MB=512

# Research Agent
RESEARCH_AGENT_ENABLED=true
FACTOR_DISCOVERY_INTERVAL_HOURS=6
HYPOTHESIS_GENERATION_RATE=100
MAX_CONCURRENT_TESTS=10

# Development Agent
DEVELOPMENT_AGENT_ENABLED=true
BACKTEST_LOOKBACK_DAYS=365
OPTIMIZATION_ITERATIONS=1000
PARAMETER_SEARCH_DEPTH=5

# Execution Agent
EXECUTION_AGENT_ENABLED=true
ORDER_EXECUTION_TIMEOUT=30
SLIPPAGE_TOLERANCE=0.001
MINIMUM_ORDER_SIZE=10.0

# Risk Agent
RISK_AGENT_ENABLED=true
RISK_CHECK_INTERVAL_SECONDS=30
ALERT_THRESHOLD_BREACH_COUNT=3
EMERGENCY_STOP_ENABLED=true

# Sentiment Agent
SENTIMENT_AGENT_ENABLED=true
SENTIMENT_UPDATE_INTERVAL_MINUTES=15
NEWS_LOOKBACK_HOURS=24
SOCIAL_SENTIMENT_WEIGHT=0.3

# =============================================================================
# FACTOR DISCOVERY ENGINE
# =============================================================================

# Hypothesis Generation
HYPOTHESIS_TEMPLATES_PATH=./config/hypothesis_templates.json
PARAMETER_RANGES_PATH=./config/parameter_ranges.json
GENETIC_ALGORITHM_POPULATION=100
GENETIC_ALGORITHM_GENERATIONS=50
MUTATION_RATE=0.1
CROSSOVER_RATE=0.8

# Factor Validation
VALIDATION_SPLIT=0.3
OUT_OF_SAMPLE_PERIOD_DAYS=90
MINIMUM_SHARPE_RATIO=1.0
MINIMUM_TRADES=50
MAXIMUM_DRAWDOWN=0.15

# Economic Interpretation
FACTOR_EXPLANATION_MODEL=gpt-4
INTERPRETATION_CONFIDENCE_THRESHOLD=0.7

# =============================================================================
# PERFORMANCE MONITORING
# =============================================================================

# Metrics Collection
METRICS_COLLECTION_INTERVAL_SECONDS=60
PERFORMANCE_HISTORY_DAYS=365
BENCHMARK_SYMBOLS=BTC,ETH,SPY

# Alerting
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_password_here

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# API Security
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION_HOURS=24
API_RATE_LIMIT_PER_MINUTE=100

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key_here
SALT=your_16_character_salt_here

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================

# Logging Configuration
LOG_LEVEL=info
LOG_ROTATION_SIZE_MB=100
LOG_RETENTION_DAYS=30

# Prometheus Metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
METRICS_NAMESPACE=yoree

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Development Mode
DEBUG_MODE=false
MOCK_TRADING=true
PAPER_TRADING_BALANCE=100000.0

# Testing Configuration
TEST_DATA_PATH=./test_data/
BACKTEST_COMMISSION=0.001
BACKTEST_SLIPPAGE=0.0005

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Advanced Features
ENABLE_GPU_ACCELERATION=false
ENABLE_ADVANCED_ML=true
ENABLE_REAL_TIME_PROCESSING=true
ENABLE_CROSS_CHAIN=false
ENABLE_DEFI_INTEGRATION=true

# Experimental Features
ENABLE_QUANTUM_ALGORITHMS=false
ENABLE_SENTIMENT_TRADING=true
ENABLE_NEWS_TRADING=true
ENABLE_SOCIAL_TRADING=false

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================

# Data Backup
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=6
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups/

# Recovery Settings
AUTO_RECOVERY_ENABLED=true
RECOVERY_CHECK_INTERVAL_MINUTES=5
MAX_RECOVERY_ATTEMPTS=3 